{
  "info": {
    "name": "Reference Links Chat API",
    "description": "Complete API collection for testing Reference Links Chat System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{JWT_TOKEN}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "JWT_TOKEN",
      "value": "",
      "type": "string"
    },
    {
      "key": "REFERENCE_LINK_ID",
      "value": "reference123",
      "type": "string"
    },
    {
      "key": "MESSAGE_ID",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "1. Login (Get JWT Token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('JWT_TOKEN', response.token);",
                  "        console.log('‚úÖ JWT Token saved:', response.token.substring(0, 20) + '...');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\"email\\": \\"test@example.com\\",\\n  \\"password\\": \\"password123\\"\\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/auth/signin",
              "host": ["{{BASE_URL}}"],
              "path": ["auth", "signin"]
            },
            "description": "Login to get JWT token for authenticated requests"
          }
        }
      ]
    },
    {
      "name": "üîó Reference Links Chat",
      "item": [
        {
          "name": "1. Send Message to Reference Links Chat",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.messageId) {",
                  "        pm.collectionVariables.set('MESSAGE_ID', response.messageId);",
                  "        console.log('‚úÖ Message ID saved:', response.messageId);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\"text\\": \\"This reference link is very helpful for understanding the topic!\\",\\n  \\"messageType\\": \\"text\\"\\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/references/{{REFERENCE_LINK_ID}}/chat",
              "host": ["{{BASE_URL}}"],
              "path": ["references", "{{REFERENCE_LINK_ID}}", "chat"]
            },
            "description": "Send a new message to reference links chat"
          }
        },
        {
          "name": "2. Get Reference Links Chat Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/references/{{REFERENCE_LINK_ID}}/chat?limit=50",
              "host": ["{{BASE_URL}}"],
              "path": ["references", "{{REFERENCE_LINK_ID}}", "chat"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Get all messages for reference links chat (public access)"
          }
        },
        {
          "name": "3. Reply to Reference Links Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\"text\\": \\"I agree! This reference helped me understand the concept better.\\",\\n  \\"referenceLinkId\\": \\"{{REFERENCE_LINK_ID}}\\"\\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/references-chat/{{MESSAGE_ID}}/reply",
              "host": ["{{BASE_URL}}"],
              "path": ["references-chat", "{{MESSAGE_ID}}", "reply"]
            },
            "description": "Reply to a specific reference links chat message"
          }
        },
        {
          "name": "4. Get Reference Links Chat Participants",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/references/{{REFERENCE_LINK_ID}}/chat/participants",
              "host": ["{{BASE_URL}}"],
              "path": ["references", "{{REFERENCE_LINK_ID}}", "chat", "participants"]
            },
            "description": "Get all participants in reference links chat"
          }
        },
        {
          "name": "5. Delete Reference Links Message",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/references-chat/{{MESSAGE_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["references-chat", "{{MESSAGE_ID}}"]
            },
            "description": "Delete a reference links chat message (own messages or admin)"
          }
        }
      ]
    },
    {
      "name": "üì± Mobile App Format",
      "item": [
        {
          "name": "1. Get Reference Links Messages (Mobile)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/references/{{REFERENCE_LINK_ID}}/messages?limit=50",
              "host": ["{{BASE_URL}}"],
              "path": ["references", "{{REFERENCE_LINK_ID}}", "messages"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Mobile app compatible endpoint for getting messages"
          }
        },
        {
          "name": "2. Send Reference Links Message (Mobile)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\"text\\": \\"Mobile app message about this reference link!\\",\\n  \\"messageType\\": \\"text\\"\\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/references/{{REFERENCE_LINK_ID}}/messages",
              "host": ["{{BASE_URL}}"],
              "path": ["references", "{{REFERENCE_LINK_ID}}", "messages"]
            },
            "description": "Mobile app compatible endpoint for sending messages"
          }
        }
      ]
    },
    {
      "name": "üëë Admin Only",
      "item": [
        {
          "name": "1. Get Reference Links Chat Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/admin/references-chat/stats",
              "host": ["{{BASE_URL}}"],
              "path": ["admin", "references-chat", "stats"]
            },
            "description": "Get comprehensive reference links chat statistics (admin only)"
          }
        }
      ]
    },
    {
      "name": "üß™ Test Workflow",
      "item": [
        {
          "name": "Complete Test Flow",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// This is a workflow test that can be run to test all endpoints in sequence",
                  "console.log('üß™ Reference Links Chat Test Workflow');",
                  "console.log('1. ‚úÖ Login completed');",
                  "console.log('2. ‚úÖ Send message');", 
                  "console.log('3. ‚úÖ Get messages');",
                  "console.log('4. ‚úÖ Get participants');",
                  "console.log('5. ‚úÖ Test reply');",
                  "console.log('üéâ All reference links chat tests completed!');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/references/{{REFERENCE_LINK_ID}}/chat",
              "host": ["{{BASE_URL}}"],
              "path": ["references", "{{REFERENCE_LINK_ID}}", "chat"]
            },
            "description": "Final test to confirm system is working"
          }
        }
      ]
    }
  ]
}