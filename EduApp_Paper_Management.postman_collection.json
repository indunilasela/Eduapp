		{
			"name": "Paper Upload",
			"item": [
				{
					"name": "Upload Past Paper",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.paperId) {",
									"        pm.environment.set('paperId', response.paperId);",
									"        console.log('Paper ID saved:', response.paperId);",
									"    }",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "paperFile",
									"type": "file",
									"src": []
								},
								{
									"key": "type",
									"value": "past paper",
									"type": "text"
								},
								{
									"key": "name",
									"value": "Mathematics O/L",
									"type": "text"
								},
								{
									"key": "year",
									"value": "2024",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/subjects/{{subjectId}}/papers/upload",
							"host": ["{{baseUrl}}"],
							"path": ["subjects", "{{subjectId}}", "papers", "upload"]
						}
					}
				},
